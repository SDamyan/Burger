
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger</h1>
    <p class="lead">Add a burger to eat now or later!</p>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button id = "submitBtn" type="submit">Add Burger</button>
</form>

<h2>Burgers</h2>
<div class="card" style="width: 18rem;">
  <div class="card-header">
    Featured
  </div>
  <ul class="list-group list-group-flush">
      {{#each burgers}}
      {{#unless devouredy}}
        {{> burgers/burger-block devouredy=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devouredy}}
      {{> burgers/burger-block devouredy=false}}
    {{/if}}
  {{/each}}
</ul>

<nav class="navbar fixed-bottom navbar-light bg-light">
  <a class="navbar-brand" href="#">Burgers...mmm</a>
</nav>